@using Resources;
@model Microsoft_Teams_Graph_RESTAPIs_Connect.Models.ResultsViewModel
<div class="col-md-12">
    <div class="col-md-12">
        @if (Model != null)
        {
            if (Model.Items.Any())
            {
                foreach (var item in Model.Items)
                {
                    <label>
                        <b>@item.Display</b>
                    </label><br />
                    if (item.Properties.Count > 0)
                    {
                        <table id="entity">
                            @foreach (var property in item.Properties)
                            {
                                <tr>
                                    @if (property.Key != "Stream")
                                    {
                                        <td class="pad">@property.Key</td>
                                        <td>@property.Value</td>
                                    }
                                    else if (property.Value != null)
                                    {
                                        <td><img src="@String.Format("data:image;base64,{0}", Convert.ToBase64String(property.Value as byte[]))" /></td>
                                    }
                                </tr>
                            }
                        </table>
                        <br />
                    }
                }
            }
            else
            {
                <p>@Resource.No_Results</p>
            }
        }
        <br />
    </div>
</div>
